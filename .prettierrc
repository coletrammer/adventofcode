{
    "tabWidth": 2,
    "printWidth": 120,
    "overrides": [
        {
            "files": ["*.json", "*.code-snippets", ".prettierrc"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["flake.lock"],
            "options": {
                "tabWidth": 4,
                "parser": "json"
            }
        },
        {
            "files": [".clangd", ".clang-tidy", ".clang-format"],
            "options": {
                "parser": "yaml"
            }
        }
    ]
}
